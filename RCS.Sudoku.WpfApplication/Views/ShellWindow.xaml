<Window
    x:Class="RCS.Sudoku.WpfApplication.Views.ShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:RCS.Sudoku.Common.Properties;assembly=RCS.Sudoku.Common"
    DataContext="{Binding ShellViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d"
    Width="400" 
    Height="450"
    Title="{x:Static properties:Resources.AppDisplayName}"
    >
 
    <Window.Content>
        <Frame
            x:Name="shellFrame"
            NavigationUIVisibility="Hidden"
            Focusable="False" />
    </Window.Content>
</Window>